@model WebQuanLyCongTy.Models.PhongBan

@{
    ViewBag.Title = "Create";
}

<h2 style="background-color: green; height: 58px; text-align: center; color: white; padding: 8px;">Tạo phòng ban mới</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Phòng Ban</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TenPhongBan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenPhongBan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenPhongBan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" style="background: green; color: white; width: 100%;"/>
            </div>
        </div>
    </div>
}

<div>
    <button class="action-button delete-button" style=" background-color: #d6caca; padding: 4px; border: none; color: white;">
    @Html.ActionLink("Trở về", "Index")
    </button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
