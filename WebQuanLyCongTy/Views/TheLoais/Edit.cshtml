@model WebQuanLyCongTy.Models.TheLoai

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal" style="width: 45%; margin: 20px auto; border: 1px solid #ccc;">
            <h4 style="text-align: center; padding: 8px 0; background-color: green; color: white;">Cập Nhật Thể Loại</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDTheLoai)
    
            <div class="form-group" style="margin-left: 106px;">
                @Html.LabelFor(model => model.TenTheLoai, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group"  style="margin-left: 106px;">
                @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="text-align: center; margin: auto; background-color: green; border-radius: 6px; width: 200px;">
                    <input type="submit" value="Save" class="btn btn-default" style="color: white;"/>
                </div>
                <div style="margin-left: 20px;">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    }
    
</body>
</html>
